{
  "extends": ["//"],
  "tasks": {
    "build:styles": {
      "outputs": ["dist/index.css"],
      "inputs": ["src/styles.css", "../../packages/tailwind-config/**"]
    },
    "build:components": {
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "build": {
      "dependsOn": ["build:styles", "build:components"]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["dev:styles", "dev:components"],
      "cache": false,
      "persistent": true
    }
  }
}
